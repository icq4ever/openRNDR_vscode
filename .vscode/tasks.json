    // openRNDR
    "version": "2.0.0",
    "tasks": [
        {
            "label": "OPENRNDR RUN",
            "type": "shell",
            "group": {
                "kind" : "build",
                "isDefault" : true
            },
            "command" : "./openrndr-vscode-launcher.sh ${workspaceFolder} ${fileDirname} ${fileBasenameNoExtension} ${fileExtname} ${file}",
            "presentation" : {
                "echo" : false
            }

        }
    ]
}